---
import Layout from "../components/layout.astro"
import Svg from "../components/svg.astro"
import Link from "../components/link.astro"
import Work from "../components/work.astro"
---

<Layout>
  <header>
    <div class="top-icon">
      <Svg icon="luisfun" />
    </div>
    <div class="links">
      <Link
        icon="x-twitter"
        href="https://twitter.com/LuisFunX"
      />
      <Link
        icon="github"
        href="https://github.com/LuisFun"
      />
      <Link
        icon="discord"
        href="https://discord.gg/5bKYuCcmfu"
      />
      <Link
        icon="patreon"
        href="https://www.patreon.com/luisfun"
      />
    </div>
  </header>
  <main>
    <div class="grid-column-2">
      <Work
        icon="paimon"
        title="Paimon+"
        sub="Genshin Impact Online Tools"
        site="https://paimon.plus"
        env={["Gatsby, MUI","Cloudflare Pages / Workers"]}
      />
      <Work
        icon="hono"
        title="Discord Hono"
        sub="Workers Discord Bot Module"
        site="https://discord-hono.luis.fun"
        env={["Discord Bot","Edge Functions"]}
        github="https://github.com/LuisFun/discord-hono"
      />
      <Work
        icon="workers"
        title="AI Bot"
        sub="Discord Bot for Cloudflare AI"
        env={["Discord Bot","Cloudflare Workers / AI"]}
        github="https://github.com/LuisFun/discord-bot-cloudflare-ai"
      />
      <Work
        icon="mimo"
        title="HoYo News Bot"
        sub="Discord Bot to deliver website news"
        discord="https://discord.com/api/oauth2/authorize?client_id=1197426250743042069&permissions=2048&scope=bot"
        env={["Discord Bot","Cloudflare Workers / D1"]}
        github="https://github.com/LuisFun/discord-bot-hoyo-news"
      />
      <Work
        icon="luisfun"
        title="Luis.Fun"
        sub="Portfolio 2023"
        env={["Astro","Cloudflare Pages"]}
        github="https://github.com/LuisFun/luis.fun"
      />
      <Work
        icon="luislab"
        title="Luis Lab"
        sub="Blog in Japanese"
        site="https://blog.luis.fun"
        env={["Gatsby","Cloudflare Pages"]}
      />
      <Work
        icon="pom-pom"
        title="Pom-Pom Lab"
        sub="Honkai: Star Rail Online Tools"
        site="https://starrail.luis.fun"
        env={["Gatsby, MUI","Cloudflare Pages / Workers"]}
      />
    </div>
  </main>
</Layout>

<style>
  header {
    margin: 4rem 0;
  }
  main {
    margin: 4rem 0;
  }
  .top-icon {
    display: block;
    margin: auto;
    border-radius: 50%;
    width: 6rem;
    height: 6rem;
  }
  .links {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
  }
</style>
