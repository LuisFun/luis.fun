---
import Svg from "./svg.astro"
import NewTab from "./new-tab.astro"
type Props = {
  icon: string
  title: string
  sub: string
  site?: string
  env: string[]
  github?: string
}
const { icon, title, sub, site, env, github } = Astro.props
---

<div class="card rounded">
  <div class="head flex rounded">
    <img class="icon rounded" src={"/images/"+icon+".webp"} alt={icon} />
    <div class="title">
      <div class="sub">{sub}</div>
      <h2>{title}</h2>
    </div>
    {site &&
      <div class="link-icon">
        <NewTab href={site} label="new tab" >
          <Svg icon="arrow-up-right-from-square" />
        </NewTab>
      </div>
    }
  </div>
  <div class="field flex">
    <ul>
      {env.map(e => <li>{e}</li>)}
    </ul>
    {github &&
      <div class="link-icon">
        <NewTab href={github} label="github" >
          <Svg icon="github" />
        </NewTab>
      </div>
    }
  </div>
</div>

<style>
  .rounded {
    border-radius: 1.5rem;
  }
  .card {
    background-color: var(--paper);
  }
  .flex {
    display: flex;
    align-items: center;
  }
  .head {
    background-color: var(--paper2);
  }
  .icon {
    width: 3rem;
    height: 3rem;
  }
  .title {
    margin: 0 1rem;
  }
  .sub {
    color: var(--text2);
    font-size: .85rem;
    margin-bottom: .15rem;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .link-icon {
    margin: 0 1rem 0 auto;
    width: 1rem;
  }
  .field {
  }
  ul {
    margin: .5rem 1rem;
    padding-inline-start: 2rem;
    line-height: 1.5;
  }
</style>
